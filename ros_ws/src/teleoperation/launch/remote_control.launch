<?xml version="1.0"?>
<launch>
<!-- 
Launches all necessary nodes that let the user control the car with the keyboard and/or gamepad.
-->

  <arg name="invert_steering" default="true"/>

    <!-- remote joy -->
    <node
      respawn="true"
      pkg="teleoperation"
      type="joystick_controller"
      name="joystick_controller"
      output="log" >
      <param name="invert_steering" type="bool" value ="$(arg invert_steering)" />
    </node>

    <!-- joy node -->
    <node
      respawn="true"
      pkg="joy"
      type="joy_node"
      name="joy_node"
      output="log" >

      <param name="dev" type="string" value="/dev/input/js0" />
      <param name="deadzone" value="0.12" />
      <param name="autorepeat_rate" value = "100" />
    </node>

    <!-- remote keyboard -->
    <node
      respawn="true"
      pkg="teleoperation"
      type="keyboard_controller"
      name="keyboard_controller"
      output="log" >
    </node>
</launch>